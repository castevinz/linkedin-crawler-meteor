body
  padding 10px 30px

h2
  margin 0

form.search
  input
    width 250px
    max-width 100%

#search
#res
#status
  vertical-align top
  border 1px solid #ccc
  border-radius 3px
  padding 10px 25px

#status
  margin-top 20px
  visibility hidden
  min-width 350px
  &.loading
    visibility visible
    #ratio
      display block
  .fa-spin
    font-size 22px
    vertical-align middle
    display none
  span
    color gray
    display block
  #log
    display inline-block
  #log2
    text-align center
  span:first-child
    font-style italic
  button
    display none
    margin 20px auto 0
  &.loading
    button
      display block
    .fa-spin
      display inline-block

#search.loading
  button
    display none

#error
  color #ff0000
  border 1px solid #ff0000
  border-radius 3px
  padding 5px 15px
  text-align center
  margin 10px 0
  &:empty
    display none
#ratio
  display none
  border 1px solid #ccc
  background #ccc
  height 20px
  border-radius 10px
  width 250px
  margin 5px auto
  overflow hidden
  position relative
  &.big_rviewed
    .rtotal
      z-index 10
  &.big_rtotal
    .rviewed
      z-index 10
  span
    color #fff
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    text-align center
    display block
    text-shadow 0 1px 1px rgba(0,0,0,0.5)
    z-index 20
  div
    position absolute
    top 1px
    left 0
    height 18px
    width 0
    border-radius 10px
  .rviewed
    // http://www.colorzilla.com/gradient-editor/
    background rgb(208,228,247) /* Old browsers */
    background -moz-linear-gradient(top,  rgba(208,228,247,1) 0%, rgba(115,177,231,1) 24%, rgba(10,119,213,1) 50%, rgba(83,159,225,1) 79%, rgba(135,188,234,1) 100%) /* FF3.6+ */
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(208,228,247,1)), color-stop(24%,rgba(115,177,231,1)), color-stop(50%,rgba(10,119,213,1)), color-stop(79%,rgba(83,159,225,1)), color-stop(100%,rgba(135,188,234,1))) /* Chrome,Safari4+ */
    background -webkit-linear-gradient(top,  rgba(208,228,247,1) 0%,rgba(115,177,231,1) 24%,rgba(10,119,213,1) 50%,rgba(83,159,225,1) 79%,rgba(135,188,234,1) 100%) /* Chrome10+,Safari5.1+ */
    background -o-linear-gradient(top,  rgba(208,228,247,1) 0%,rgba(115,177,231,1) 24%,rgba(10,119,213,1) 50%,rgba(83,159,225,1) 79%,rgba(135,188,234,1) 100%) /* Opera 11.10+ */
    background -ms-linear-gradient(top,  rgba(208,228,247,1) 0%,rgba(115,177,231,1) 24%,rgba(10,119,213,1) 50%,rgba(83,159,225,1) 79%,rgba(135,188,234,1) 100%) /* IE10+ */
    background linear-gradient(to bottom,  rgba(208,228,247,1) 0%,rgba(115,177,231,1) 24%,rgba(10,119,213,1) 50%,rgba(83,159,225,1) 79%,rgba(135,188,234,1) 100%) /* W3C */
    filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#d0e4f7', endColorstr='#87bcea',GradientType=0 )") /* IE6-9 */
  .rtotal
    background rgb(255,0,0) /* Old browsers */
    background -moz-linear-gradient(top,  rgba(255,0,0,1) 0%, rgba(143,2,34,1) 55%, rgba(142,0,2,1) 100%) /* FF3.6+ */
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,0,0,1)), color-stop(55%,rgba(143,2,34,1)), color-stop(100%,rgba(142,0,2,1))) /* Chrome,Safari4+ */
    background -webkit-linear-gradient(top,  rgba(255,0,0,1) 0%,rgba(143,2,34,1) 55%,rgba(142,0,2,1) 100%) /* Chrome10+,Safari5.1+ */
    background -o-linear-gradient(top,  rgba(255,0,0,1) 0%,rgba(143,2,34,1) 55%,rgba(142,0,2,1) 100%) /* Opera 11.10+ */
    background -ms-linear-gradient(top,  rgba(255,0,0,1) 0%,rgba(143,2,34,1) 55%,rgba(142,0,2,1) 100%) /* IE10+ */
    background linear-gradient(to bottom,  rgba(255,0,0,1) 0%,rgba(143,2,34,1) 55%,rgba(142,0,2,1) 100%) /* W3C */
    filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff0000', endColorstr='#8e0002',GradientType=0 )") /* IE6-9 */



#persons
  max-height 300px
  padding 9px 14px
  background-color #f7f7f9
  border 1px solid #e1e1e8
  border-radius 4px
  a
    display block
    margin-bottom 10px
  img
    max-width 50px
    max-height 50px

  td
    vertical-align middle
    text-align center
    &:nth-child(4)
      text-align left
      span
        display block

  // when using "fnUpdate", datatables ignore the width fixed (bug?)
  th
    &:first-child
      width 70px !important
    &:nth-child(2)
    &:nth-child(3)
    &:nth-child(5)
      width 200px !important
    &:nth-child(4)
      width auto !important

#res
  margin-top 30px

.glyphicon
  font-size 20px

.glyphicon-refresh
  animation rotateMe 0.5s linear infinite

@keyframes rotateMe
  from
    transform scale(1) rotate(0deg)
  to
    transform scale(1) rotate(360deg)

@media (min-width: 800px)
  #status
  #search
    display inline-block
  #status
    margin 0 0 0 10px
  .credentials
  .payload
    >div
      display inline-block
      margin-right 20px
    margin-bottom 20px
  button[type=submit]
    margin-top 20px
    position relative
    left 200px
    padding 6px 30px